{
    "name": "json-schema-manager",
    "version": "0.0.12",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "build:lib": "ng build ng-json-schema-form",
        "publish:lib": "npm run build:lib && npm publish ./dist/ng-json-schema-form --access public",
        "watch": "ng build --watch --configuration development",
        "test": "ng test"
    },
    "prettier": {
        "printWidth": 100,
        "singleQuote": true,
        "overrides": [
            {
                "files": "*.html",
                "options": {
                    "parser": "angular"
                }
            }
        ]
    },
    "private": true,
    "dependencies": {
        "tslib": "^2.3.0",
        "@angular/core": "^20.3.0",
        "ajv-formats": "^3.0.1",
        "ajv": "^8.17.1",
        "zone.js": "~0.15.0",
        "ajv-draft-04": "^1.0.0",
        "@angular/common": "^20.3.0",
        "@angular/platform-browser": "^20.3.0",
        "@angular/compiler": "^20.3.0",
        "@angular/forms": "^20.3.0",
        "@angular/router": "^20.3.0",
        "rxjs": "~7.8.0"
    },
    "devDependencies": {
        "karma-jasmine-html-reporter": "~2.1.0",
        "karma-coverage": "~2.2.0",
        "tailwindcss": "^4.0.0",
        "ng-packagr": "^20.3.0",
        "typescript": "~5.9.2",
        "karma": "~6.4.0",
        "@angular/cli": "^20.3.14",
        "@angular/compiler-cli": "^20.3.0",
        "postcss": "^8.4.38",
        "autoprefixer": "^10.4.19",
        "karma-chrome-launcher": "~3.2.0",
        "karma-jasmine": "~5.1.0",
        "jasmine-core": "~5.9.0",
        "@types/jasmine": "~5.1.0",
        "@angular/build": "^20.3.14",
        "@tailwindcss/postcss": "^4.0.0"
    }
}
